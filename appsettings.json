{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "text-generate-main-api": {
        "ClusterId": "cluster-text-generate",
        "Match": { 
          "Path": "/api/text-generate/{action}",
          "Methods": ["GET", "POST", "PUT", "DELETE"]
        },
        "Transforms": [
          { "PathPattern": "/api/{action}" }
        ]
      },
      "text-generate-bank-bill": {
        "ClusterId": "cluster-text-generate",
        "Match": { "Path": "/api/bank-bill/{**catchall}" },
        "Transforms": [
          { "PathPattern": "/api/bank-bill/{**catchall}" }
        ]
      },
      "text-generate-fallback": {
        "ClusterId": "cluster-text-generate",
        "Match": { "Path": "/api/proxy/{**catchall}" },
        "Transforms": [
          { "PathPattern": "/api/{**catchall}" }
        ]
      }
    },
    "Clusters": {
      "cluster-text-generate": {
        "Destinations": {
          "primary": { "Address": "https://text-generate-services.onrender.com/" }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:01:00",
            "Timeout": "00:00:30",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/system/server-info"
          }
        }
      }
    }
  },
  "TextGenerateService": {
    "BaseUrl": "https://text-generate-services.onrender.com",
    "Timeout": 120,
    "RetryCount": 3
  }
}

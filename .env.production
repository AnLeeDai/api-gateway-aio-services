# =============================================================================
# API Gateway Environment Variables - Production
# =============================================================================

# ===== APPLICATION CONFIGURATION =====
ASPNETCORE_ENVIRONMENT=Production
PORT=10000
ALLOWED_HOSTS=*

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=Information

# ===== TEXT GENERATE SERVICE CONFIGURATION =====
TEXT_GENERATE_BASE_URL=https://text-generate-services.onrender.com
TEXT_GENERATE_TIMEOUT=120
TEXT_GENERATE_RETRY_COUNT=3

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=00:01:00
HEALTH_CHECK_TIMEOUT=00:00:30
HEALTH_CHECK_PATH=/api/system/server-info
PASSIVE_HEALTH_REACTIVATION_PERIOD=00:00:10

# ===== LOAD BALANCING CONFIGURATION =====
LOAD_BALANCING_POLICY=RoundRobin

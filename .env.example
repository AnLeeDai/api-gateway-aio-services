# =============================================================================
# API Gateway Environment Variables Configuration
# =============================================================================

# ===== APPLICATION CONFIGURATION =====
ASPNETCORE_ENVIRONMENT=Development
PORT=5257
ALLOWED_HOSTS=*

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=Information

# ===== TEXT GENERATE SERVICE CONFIGURATION =====
TEXT_GENERATE_BASE_URL=http://127.0.0.1:8000
TEXT_GENERATE_TIMEOUT=30
TEXT_GENERATE_RETRY_COUNT=3

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=00:00:30
HEALTH_CHECK_TIMEOUT=00:00:05
HEALTH_CHECK_PATH=/api/system/server-info
PASSIVE_HEALTH_REACTIVATION_PERIOD=00:00:10

# ===== LOAD BALANCING CONFIGURATION =====
LOAD_BALANCING_POLICY=RoundRobin

# ===== CORS CONFIGURATION =====
# Allowed origins (* for all, or comma-separated list)
CORS_ALLOWED_ORIGINS=*

# Allowed HTTP methods
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers
CORS_ALLOWED_HEADERS=*

# ===== ASP.NET CORE CONFIGURATION =====
# Environment: Development, Production, Staging
ASPNETCORE_ENVIRONMENT=Development

# Server binding URLs
ASPNETCORE_URLS=http://localhost:5257

# Port for deployment platforms (like Render)
PORT=5257

# ===== LOGGING CONFIGURATION =====
# Log level: Trace, Debug, Information, Warning, Error, Critical
LOG_LEVEL=Information

